{
    "name": "pegasus",
    "version": "0.1.0",
    "author": "Tim Sweet",
    "homepage": "./",
    "description": "No more Mr. Nice Gaius!",
    "main": "public/electron.js",
    "repository": "https://github.com/heliorc/pegasus",
    "build": {
        "appId": "com.pegasus",
        "files": [
            "build/**/*",
            "node_modules/**/*"
        ],
        "directories": {
            "buildResources": "assets"
        }
    },
    "dependencies": {
        "@material-ui/core": "^3.0.3",
        "electron-is-dev": "^0.3.0",
        "electron-updater": "^2.10.1",
        "material-ui": "^0.20.2",
        "node-sass-chokidar": "0.0.3",
        "react": "^15.6.1",
        "react-dom": "^15.6.1",
        "react-scripts": "1.0.10"
    },
    "lint-staged": {
        "{{public,src}/**/*.{scss,js,json},package.json}": [
            "prettier --write \"{{public,src}/**/*.{scss,js,json},package.json}\"",
            "git add"
        ]
    },
    "scripts": {
        "preship": "yarn build && yarn build-css",
        "ship": "build --em.main=build/electron.js --win --ia32 -p always -c electron-builder.yml",
        "build-css": "node-sass-chokidar src/ -o src/",
        "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test --env=jsdom",
        "eject": "react-scripts eject",
        "pretty": "prettier --write \"{{public,src}/**/*.{css,scss,js,json},package.json}\"",
        "precommit": "lint-staged",
        "electron-dev": "concurrently \"yarn watch-css\" \"export BROWSER=none && yarn start\" \"wait-on http://localhost:3000 && electron .\"",
        "electron-pack": "build --em.main=build/electron.js --win --ia32 -c electron-builder.yml",
        "preelectron-pack": "yarn build && yarn build-css"
    },
    "devDependencies": {
        "prettier": "^1.7.4",
        "husky": "^0.14.3",
        "lint-staged": "^4.2.3",
        "concurrently": "^3.5.0",
        "electron": "^1.7.5",
        "electron-builder": "^19.20.1",
        "wait-on": "^2.0.2"
    }
}
